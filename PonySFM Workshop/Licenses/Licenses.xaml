<Page x:Class="PonySFM_Workshop.License.Licenses"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PonySFM_Workshop.License"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="500"
      Title="Legal mentions">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10,10,10,10">
            <Button x:Name="BackBtn" Width="40" Height="40" Style="{DynamicResource MetroCircleButtonStyle}" VerticalAlignment="Center" Click="BackBtn_Click">
                <Rectangle Width="10" Height="10">
                    <Rectangle.Fill>
                        <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_chevron_left}" />
                    </Rectangle.Fill>
                </Rectangle>
            </Button>
            <Label FontSize="30">Legal mentions</Label>
        </StackPanel>
        <TextBox x:Name="LegalMentionTextBox" Margin="10,60,10,10" TextWrapping="Wrap" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" AllowDrop="False" IsReadOnly="True" IsReadOnlyCaretVisible="True" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Page>
