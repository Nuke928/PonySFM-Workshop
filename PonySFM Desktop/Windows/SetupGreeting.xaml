<Page x:Class="PonySFM_Desktop.SetupGreeting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PonySFM_Desktop"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="500"
      Title="SetupGreeting">
    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" Margin="0,50,0,0">
            <Image Source="logo.png" Width="Auto" Height="40" Margin="0,40,0,0" />
            <Label FontSize="20" HorizontalAlignment="Center" Content="PonySFM Mod Manager Setup"/>
            <Label HorizontalAlignment="Center" FontSize="13" Content="Welcome to the PonySFM Mod Manager!"/>
            <Label HorizontalAlignment="Center" FontSize="13" Content="Just a few more things to set up."/>
        </StackPanel>
        <Button Name="BtnNext" Width="60" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,30,30" Click="BtnNext_Click">Next</Button>
    </Grid>
</Page>
