<Window x:Class="PonySFM_Desktop.InstallationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PonySFM_Desktop"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        MinWidth="500"
        MinHeight="300"
        Title="Installation" Height="300" Width="500" Loaded="Window_Loaded">
    <Grid>
        <DockPanel HorizontalAlignment="Stretch" Margin="10">
            <Grid DockPanel.Dock="Top">
                <Label FontSize="20">Installing Revision</Label>
            </Grid>
            <ProgressBar DockPanel.Dock="Bottom" Maximum="{Binding MaxProgress}" Value="{Binding Progress, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Bottom" Height="20"></ProgressBar>
            <TextBox DockPanel.Dock="Top" x:Name="installationLog" Text="{Binding InstallationLog, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Width="Auto" Height="Auto"></TextBox>
        </DockPanel>
    </Grid>
</Window>
