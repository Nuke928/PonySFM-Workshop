<Page x:Class="PonySFM_Desktop.SetupGreeting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PonySFM_Desktop"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="500"
      Title="SetupGreeting">
    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" Margin="0,70,0,0">
            <Label FontSize="20" HorizontalAlignment="Center">PonySFM Desktop Setup</Label>
            <Label FontSize="13">In this setup you will guided on how to configure PonySFM Mod Manager</Label>
        </StackPanel>
        <Button Name="BtnNext" Width="60" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,30,30" Click="BtnNext_Click">Next</Button>
    </Grid>
</Page>
